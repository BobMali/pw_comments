{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "outDir": "../Resources/Public/JavaScript",
    "rootDir": "./TypeScript",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "removeComments": true,
    "sourceMap": false
  },
  "include": [
    "TypeScript/**/*"
  ],
  "exclude": [
    "node_modules",
    "../Resources/Public/JavaScript"
  ]
}